<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/navbar.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/header.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/footer.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/music.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/gigs.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/band.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/gallery.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/shop.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="stylesheet" href="dist/aos.css" />
    <title>Band Sanitizer Official</title>
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <div class="content">
        <%- body %>
    </div>
    <%- include('../partials/footer.ejs') %>
    <script src="dist/aos.js"></script>
    <script>
        document.querySelector('html').classList.remove('no-js');
        if (!window.Cypress) {
            const scrollCounter = document.querySelector('.js-scroll-counter');

            AOS.init({
            mirror: true
            });

            document.addEventListener('aos:in', function(e) {
            console.log('in!', e.detail);
            });

            window.addEventListener('scroll', function() {
            scrollCounter.innerHTML = window.pageYOffset;
            });
        }
        /* Toggle between showing and hiding the navigation menu links when the user clicks on the hamburger menu / bar icon */
        $( document ).ready(function() {
          var hamburger = $('#hamburger-icon');
          var mobile_link_container = $('#mobile-link-container');
          hamburger.click(function() {
                hamburger.toggleClass('active');
                mobile_link_container.toggleClass('mobile-nav-display');
                console.log("click");
                return false;
          });
          for(var num=1;num<=5;num++) {
            var link = $('#link'+num);
            var href = link.href
            var e = $(href)
            link.click(function() {
                hamburger.toggleClass('active');
                mobile_link_container.toggleClass('mobile-nav-display')
                e.scrollIntoView()
                return false;
            });
          }
        });
    </script>
</body>
</html>